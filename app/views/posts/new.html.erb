<h2>New Post</h2>
<%= form_with model: @post do |form| %>
    <div class="col-md-6">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="col-md-6">
        <%= form.label :description %>
        <%= form.text_area :description, size: "50x10", class: "form-control" %>
    </div>
    <div class="col-md-6">
        <%= form.submit %>
    </div>
<% end %>