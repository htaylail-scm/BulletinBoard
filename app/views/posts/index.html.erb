<h1>Posts List</h1>
<%= button_to "New Post", new_post_path(@post) %>
<table border="2">   
    <thead>   
      <tr>   
        <th>Name</th>   
        <th>Title</th>   
        <th>Description</th>   
        <th>Actions</th>   
      </tr>   
    </thead>   
    <tbody>    
        <% @posts.each do |post| %>
        <tr>   
            <td> No </td>
            <td><%= post.title %></td>   
            <td><%= post.description %></td>    
            <div>   
            <td> 
                <%= link_to post.title, post %>  
            </td>   
        </tr>   
      <% end %>   
    </tbody>   
</table>   
