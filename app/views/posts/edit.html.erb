<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Edit Post</h4>
  </div>
  <div class="row justify-content-center">
  
    <%= form_with scope: :post, url: confirm_update_path(params[:id]),  local: true do |form| %>       
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
        <% @post.errors.full_messages_for(:title).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>
      <div class="form-group">
      <%= form.submit  "Confirm" , class: "btn btn-primary" %>
      <%=  link_to  "Clear", posts_path, class: "btn btn-warning" %>
      </div>
    <% end %>
  </div>
</div>