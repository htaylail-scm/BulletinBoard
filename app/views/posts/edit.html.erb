<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Edit Post</h4>
  </div>
  <div class="row justify-content-center">  
    <%= form_with scope: :post, url: confirm_update_path(@post),  local: true do |form| %>  
      <% if @post.errors.any? %>
          <div class="alert alert-danger">
              <% @post.errors.full_messages.each do |message| %>
              <div><%= message %></div>
          <% end %>
          </div>
      <% end %>

      <div class="row col-md-6">
        <%= form.label :title, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">     
            <%= form.text_field :title, class: "form-control", required: true %>
        </div>
      </div><br>

      <div class="row col-md-6">
        <%= form.label :description, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">     
          <%= form.text_area :description, class: "form-control" %>
          <div style="margin: 10px 0;">
            <%= form.submit  "Confirm" , class: "btn btn-primary" %>
            <%=  link_to  "Back", posts_path, class: "btn btn-warning" %>
          </div>
        </div>
      </div> 

    <% end %>
  </div>
</div>