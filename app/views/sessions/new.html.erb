<h1>Sign In</h1>
<%= form_with url: sign_in_path do |form| %>
    <div class="col-md-6">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "example@gmail.com" %>
    </div>
    <div class="col-md-6">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control" %>
    </div><br>
    
    <div class="col-md-6">
        <%= form.submit  "Sign In" , class: "btn btn-primary" %>
         <%=  link_to  "Back", root_path, class: "btn btn-warning" %>
    </div>
<% end %>
