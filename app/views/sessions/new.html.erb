<h2>Login In</h2>
<%= form_with url: user_login_path do |form| %>
    <div class="row col-md-6">
        <%= form.label :email, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">     
            <%= form.text_field :email, class: "form-control", placeholder: "example@gmail.com" %>
        </div>
    </div><br>

    <div class="row col-md-6">
        <%= form.label :password, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">     
            <%= form.password_field :password, class: "form-control" %>
           
            <%= check_box_tag :remember_me, 1, params[:remember_me],  id: "remember-me" %>
            <label for="remember-me">Remember me?</label>         
         
            <div style="margin: 20px 0;">
                <%= link_to "Forget your password?", password_reset_path %>
            </div>

            <div style="margin: 10px 0;">
                <%= form.submit  "Login" , class: "btn btn-primary" %>
                <%=  link_to  "Back", root_path, class: "btn btn-warning" %>
            </div>
        </div>
<% end %>