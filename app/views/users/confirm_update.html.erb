<div style="max-width: 500px; margin: auto;">
    <h1>Update User Confirmation</h1>
    <%= form_with model: @user, url: user_path do |form|  %>
        <% if @user.errors.any? %>
            <div class="alert alert-danger">
                <% @user.errors.full_messages.each do |message| %>
                <div><%= message %></div>
            <% end %>
            </div>
        <% end %>
                
        <div class="mb-3 row">
            <%= form.label :name , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.text_field :name, class: "form-control" %>
            </div>
        </div>

        <div class="mb-3 row">
            <%= form.label :email , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.text_field :email, class: "form-control", placeholder: "example@gmail.com" %>
            </div>
        </div>

        <div class="mb-3 row">
            <%= form.label :password , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.password_field :password, class: "form-control" %>
            </div>
        </div>

        <div class="mb-3 row">
            <%= form.label :type , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">           
            <%= form.select :role, ['admin', 'user']%>

            <%= form.select(:role, options_for_select([0,1]))%>
            </div>
        </div>
      

        <div class="mb-3 row">
            <%= form.label :phone , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.text_field :phone, class: "form-control" %>
            </div>
        </div>

        <div class="mb-3 row">
            <%= form.label :dob , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.date_field :dob, class: "form-control" %>
            </div>
        </div>

        <div class="mb-3 row">
            <%= form.label :address , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.text_area :address, class: "form-control" %>
            </div>
        </div>

        <div class="mb-3 row">
            <%= form.label :photo , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.file_field :photo, class: "form-control" %>
            </div>
        </div>

        <div class="col-sm-10">  
            <%= form.submit  "Create" , class: "btn btn-primary" %>
            <%=  link_to  "Clear", users_path, class: "btn btn-warning" %>
        </div>
      <% end %>
</div>