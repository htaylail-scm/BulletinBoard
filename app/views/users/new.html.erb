<div style="max-width: 500px; margin: auto;">
    <h1>Create User or Sing up</h1>
    <%= form_with scope: :user, url: confirm_user_create_path,  local: true do |form| %>
        <% if @user.errors.any? %>
            <div class="alert alert-danger">
                <% @user.errors.full_messages.each do |message| %>
                <div><%= message %></div>
            <% end %>
            </div>
        <% end %>
                
        <div class="mb-3 row">
            <%= form.label :name , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.text_field :name, class: "form-control", required: true %>
            </div>
        </div>

        <div class="mb-3 row">
            <%= form.label :email , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.text_field :email, class: "form-control", placeholder: "example@gmail.com", required: true %>
            </div>
        </div>

        <div class="mb-3 row">
            <%= form.label :password , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.password_field :password, class: "form-control", required: true %>
                <p class="form-text">Password must be more than 8 characters long, must contain at least 1 Uppercase and 1 Numeric.</p>
            </div>
        </div>

        <div class="mb-3 row">
            <%= form.label :password_confirmation , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.password_field :password_confirmation, class: "form-control", required: true %>
            </div>
        </div>

        <div class="mb-3 row">
            <%= form.label :type , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">           
            <%= form.select :role, options_for_select([["Admin", 0], ["User", 1]]) %>
            </div>
        </div>
      

        <div class="mb-3 row">
            <%= form.label :phone , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.text_field :phone, class: "form-control", required: true %>
            </div>
        </div>

        <div class="mb-3 row">
            <%= form.label :dob , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.date_field :dob, class: "form-control", required: true %>
            </div>
        </div>

        <div class="mb-3 row">
            <%= form.label :address , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.text_area :address, class: "form-control", required: true %>
            </div>
        </div>

        <div class="mb-3 row">
        
            <%= form.label :photo , class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
                <%= form.file_field :photo, :accept => "image/x-png,image/gif,image/jpeg", class: "form-control", required: true %>
            </div>
            <% if @user.photo.present? %>
                <div> <%= image_tag(@user.photo, :width => 100, :height => 100) %><div>
            <% end %>           
        </div>

        <div class="col-md-6">
            <%= form.submit  "Confirm" , class: "btn btn-primary" %>
            <%=  link_to  "Back", root_path, class: "btn btn-warning" %>
        </div>
    <% end %>
</div>