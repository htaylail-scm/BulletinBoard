<div style="max-width: 500px; margin: auto;">
    <h1>Update User</h1>
    <%= form_with scope: :user, url: confirm_user_update_path(@user),  local: true do |form| %>

    <div class="mb-3 row">
        <%= form.label :name , class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= form.text_field :name, class: "form-control" %>
        </div>
    </div>

    <div class="mb-3 row">
        <%= form.label :email , class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= form.text_field :email, class: "form-control", placeholder: "example@gmail.com" %>
        </div>
    </div>

    <div class="mb-3 row">
        <%= form.label :type , class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">           
            <%= form.select(:role, options_for_select([0,1])) %>
        </div>
    </div>
  

    <div class="mb-3 row">
        <%= form.label :phone , class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= form.text_field :phone, class: "form-control" %>
        </div>
    </div>

    <div class="mb-3 row">
        <%= form.label :dob , class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= form.date_field :dob, class: "form-control" %>
        </div>
    </div>

    <div class="mb-3 row">
        <%= form.label :address , class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= form.text_area :address, class: "form-control" %>
        </div>
    </div>

    <div class="mb-3 row">
        <%= form.label :photo , class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= form.file_field :photo, :accept => "image/x-png,image/gif,image/jpeg", class: "form-control" %>
            <div class="img">
                <%= image_tag @user.photo, style: 'height:120px;width:auto;' %> 
            </div>  
        </div>
    </div>

    <div class="col-md-6">
        <%= form.submit  "Confirm" , class: "btn btn-primary" %>
        <%=  link_to  "Back", users_path, class: "btn btn-warning" %>
    </div>
    <% end %>
</div>